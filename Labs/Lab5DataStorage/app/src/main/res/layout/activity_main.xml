<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonInternalStorage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="165dp"
        android:text="Internal Storage "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonCacheStorage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Cache Storage"
        app:layout_constraintEnd_toEndOf="@+id/buttonInternalStorage"
        app:layout_constraintStart_toStartOf="@+id/buttonInternalStorage"
        app:layout_constraintTop_toBottomOf="@+id/buttonInternalStorage" />

    <Button
        android:id="@+id/buttonExternalStorage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="63dp"
        android:text="External Storage"
        app:layout_constraintEnd_toEndOf="@+id/buttonCacheStorage"
        app:layout_constraintStart_toStartOf="@+id/buttonCacheStorage"
        app:layout_constraintTop_toBottomOf="@+id/buttonCacheStorage" />

    <TextView
        android:id="@+id/pathView"
        android:layout_width="338dp"
        android:layout_height="120dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="37dp"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonExternalStorage" />
</androidx.constraintlayout.widget.ConstraintLayout>